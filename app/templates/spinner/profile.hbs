
<div class="content-padded">
  <h3>Your Profile</h3>

  <ul class="table-view">
    <li class="table-view-divider">Name</li>
    <li class="table-view-cell">{{firstName}} {{lastName}}</li>
    <li class="table-view-divider">Email</li>
    <li class="table-view-cell">{{auth.email}}</li>
    <li class="table-view-divider">Phone</li>
    <li class="table-view-cell">{{phone}}</li>
    {{#if averageRating}}
      <li class="table-view-divider">Spinner Rating</li>
      <li class="table-view-cell table-view-cell">{{averageRating}} out of 5 stars</li>
    {{/if}}
  </ul>

  <button {{action 'logout'}} class="btn btn-negative">Log Out</button>
</div>
